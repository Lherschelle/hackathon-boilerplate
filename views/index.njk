{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% extends "./layout.njk" %}

{% block pageTitle %}
  Department of Health and Social Care Prototype
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">Department of Health and Social Care Prototype</h1>
      <p class="govuk-body-l">
        This is a prototype for the Department of Health and Social Care
        developed by Hitachi Solutions.
      </p>
      {{
        govukDetails({
          summaryText: "Service Information",
          text: "You can use this service to get in touch with the Department of Health and Social Care."
        })
      }}
      {{
        govukButton({
        text: "Start now",
        href: "/category",
        isStartButton: true
        })
}}
    </div>
  </div>
{% endblock %}
