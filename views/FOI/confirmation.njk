{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% extends "../layout.njk" %}

{% block pageTitle %}
  Application complete
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{
        govukPanel({
          titleText: "Application complete",
          html: "Your reference number<br><strong>" + reference + "</strong>"
        })
      }}
      {% if confirmationEmailSent %}
        <p class="govuk-body">We have sent you a confirmation email.</p>
      {% endif %}

      <h2 class="govuk-heading-m">What happens next</h2>

      <p class="govuk-body">
        We've sent your freedom of information request to the Department of
        Health and Social Care.
      </p>

      <p class="govuk-body">
        They will process your request, or contact you to ask for more information.
      </p>

      <p class="govuk-body">
        <a class="govuk-link" href="#">What did you think of this service? </a>
        (takes 30 seconds)
      </p>
    </div>
  </div>
{% endblock %}
